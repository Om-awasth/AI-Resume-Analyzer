# Flask Configuration
FLASK_ENV=production
RESUME_ANALYZER_SECRET=your-secret-key-here-change-this

# Database (Railway will provide PostgreSQL)
# Leave empty for local SQLite, or set for production PostgreSQL
DATABASE_URL=postgresql://user:password@localhost/resume_db

# Email Configuration (for password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_USE_TLS=True

# Optional: Twilio (for SMS notifications, if needed)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_FROM=+1234567890

# Upload limits
MAX_FILE_SIZE=5242880
